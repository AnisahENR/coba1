<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backg2"
    tools:context="com.example.anisahdenis.coba1.TambahLaundryActivityBaru">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".125"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageButton
            android:background="@drawable/ic_action_cancel"
            android:layout_gravity="center"
            android:id="@+id/btn_batal"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Tambah Data Laundry"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <ImageButton
            android:background="@drawable/ic_check"
            android:layout_gravity="right"
            android:id="@+id/btn_simpan"
            android:layout_width="30dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".35"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logoilo"
            android:layout_width="@dimen/logo_w2"
            android:layout_height="@dimen/logo_h2"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ilologo"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi Laundry Online"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/grey_dark">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Laundry"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:padding="10dp"
            android:background="@drawable/round_field"
            android:id="@+id/input_namaLaundry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Laundry"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/light_blue"
            android:textSize="15sp"
            android:textColorHint="@color/grey_dark"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:background="@drawable/round_field"
            android:padding="10dp"
            android:id="@+id/input_noTelfon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nomor Telepon"
            android:textSize="15sp"
            android:textColor="@color/light_blue"
            android:textColorHint="@color/grey_dark"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Laundry"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:background="@drawable/round_field"
            android:padding="10dp"
            android:id="@+id/input_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Alamat Laundry"
            android:textSize="15sp"
            android:textColorHint="@color/grey_dark"
            android:textColor="@color/light_blue"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Laundry"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:background="@drawable/round_field"
            android:padding="10dp"
            android:id="@+id/input_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Website Laundry"
            android:textSize="15sp"
            android:textColorHint="@color/grey_dark"
            android:textColor="@color/light_blue"/>
    </LinearLayout>

</LinearLayout>
